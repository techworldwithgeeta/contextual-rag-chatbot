# =============================================================================
# Contextual RAG Chatbot - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your setup
# cp env.example .env

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://rag_user:rag_password@localhost:5432/rag_db

# Individual database settings (alternative to DATABASE_URL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rag_db
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password

# =============================================================================
# Ollama Configuration
# =============================================================================
# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434

# Default model to use for text generation
OLLAMA_MODEL=llama2:13b

# Model timeout in seconds
OLLAMA_TIMEOUT=300

# =============================================================================
# Embedding Model Configuration
# =============================================================================
# Sentence transformer model for embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Embedding dimension (384 for all-MiniLM-L6-v2)
EMBEDDING_DIMENSION=384

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# RAG Pipeline Configuration
# =============================================================================
# Document chunk size for processing
CHUNK_SIZE=1024

# Overlap between chunks
CHUNK_OVERLAP=200

# Number of top documents to retrieve
TOP_K_RETRIEVAL=5

# Similarity threshold for document retrieval
SIMILARITY_THRESHOLD=0.7

# Enable/disable document re-ranking
ENABLE_RERANKING=true

# =============================================================================
# Web Interface Configuration
# =============================================================================
# Host to bind the web interface to
WEB_HOST=0.0.0.0

# Port to bind the web interface to
WEB_PORT=8000

# Enable debug mode
WEB_DEBUG=False

# Enable auto-reload for development
WEB_RELOAD=False

# Number of workers for production
WEB_WORKERS=4

# =============================================================================
# Application Settings
# =============================================================================
# Application debug mode
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Secret key for session management (change in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Enable/disable caching
CACHE_EMBEDDINGS=true

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# Arize Phoenix Configuration (Optional)
# =============================================================================
# Arize Phoenix API key for evaluation and tracing
ARIZE_API_KEY=your_arize_api_key_here

# Arize Phoenix space key
ARIZE_SPACE_KEY=your_space_key_here

# Enable Phoenix tracing
ENABLE_PHOENIX_TRACING=false

# Phoenix server URL
PHOENIX_SERVER_URL=http://localhost:6006

# =============================================================================
# Crew.AI Configuration (Optional)
# =============================================================================
# OpenAI API key for Crew.AI agents
OPENAI_API_KEY=your_openai_api_key_here

# Enable Crew.AI agents
ENABLE_CREW_AI=false

# Crew.AI model to use
CREW_AI_MODEL=gpt-3.5-turbo

# =============================================================================
# RAGAs Evaluation Configuration (Optional)
# =============================================================================
# Enable RAGAs evaluation
ENABLE_RAGAS_EVALUATION=false

# RAGAs evaluation dataset path
RAGAS_DATASET_PATH=data/evaluation/

# RAGAs metrics to compute
RAGAS_METRICS=precision,recall,faithfulness,answer_correctness

# =============================================================================
# Security Configuration
# =============================================================================
# Enable CORS
ENABLE_CORS=true

# Allowed CORS origins
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# Performance Configuration
# =============================================================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=300

# Enable response compression
ENABLE_COMPRESSION=true

# =============================================================================
# File Upload Configuration
# =============================================================================
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Allowed file extensions
ALLOWED_EXTENSIONS=pdf,docx,txt,pptx,md

# Upload directory
UPLOAD_DIR=data/uploads/

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Enable health checks
ENABLE_HEALTH_CHECKS=true

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# Enable metrics collection
ENABLE_METRICS=false

# Metrics endpoint
METRICS_ENDPOINT=/metrics

# =============================================================================
# Development Configuration
# =============================================================================
# Enable hot reload
ENABLE_HOT_RELOAD=false

# Enable detailed error messages
ENABLE_DETAILED_ERRORS=false

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Log file path
LOG_FILE_PATH=logs/rag_chatbot.log

# =============================================================================
# Production Configuration
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Enable SSL/TLS
ENABLE_SSL=false

# SSL certificate path
SSL_CERT_PATH=

# SSL key path
SSL_KEY_PATH=

# =============================================================================
# Backup Configuration
# =============================================================================
# Enable automatic backups
ENABLE_BACKUPS=false

# Backup interval in hours
BACKUP_INTERVAL=24

# Backup retention days
BACKUP_RETENTION_DAYS=7

# Backup directory
BACKUP_DIR=data/backups/ 